# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Model Configuration
CENTRAL_LLM_MODEL=zai/glm-4.5-air:free
AGENT_LLM_MODEL=google/gemma-2-9b-it:free

# Simulation Configuration
MAP_WIDTH=8
MAP_HEIGHT=6
MAP_LAYOUT_TYPE=extreme
# Layout options: tunnel, extreme, bridge, random
# - tunnel: Strategic bottlenecks (balanced conflicts)
# - extreme: Single serpentine corridor (MAXIMUM conflicts!)  
# - bridge: Chambers with single-cell bridges (strategic)
# - random: Random wall placement (minimal conflicts)
MIN_AGENTS=2
MAX_AGENTS=4
LOG_SIMULATION=true
